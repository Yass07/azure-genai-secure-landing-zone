############################################
# Test VM in VNet (for private access checks)
# - No Public IP
# - SSH key auth only
############################################

locals {
  testvm_name = "vm-test-${local.env}"
}

resource "azurerm_network_interface" "testvm" {
  name                = "nic-${local.testvm_name}"
  location            = local.location
  resource_group_name = azurerm_resource_group.core.name
  tags                = local.tags

  ip_configuration {
    name                          = "ipconfig1"
    subnet_id                     = azurerm_subnet.workload.id
    private_ip_address_allocation = "Dynamic"
  }
}

resource "azurerm_linux_virtual_machine" "testvm" {
  name                = local.testvm_name
  resource_group_name = azurerm_resource_group.core.name
  location            = local.location
  size                = "Standard_DS1_v2"
  tags                = local.tags

  network_interface_ids = [
    azurerm_network_interface.testvm.id
  ]

  admin_username                  = "azureuser"
  disable_password_authentication = true

  admin_ssh_key {
    username   = "azureuser"
    public_key = "ssh-rsa  ijask_jid@YassMi-Notebook"
  }

  os_disk {
    caching              = "ReadWrite"
    storage_account_type = "Standard_LRS"
  }

  source_image_reference {
    publisher = "Canonical"
    offer     = "0001-com-ubuntu-server-jammy"
    sku       = "22_04-lts"
    version   = "latest"
  }
}
